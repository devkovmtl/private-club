<!DOCTYPE html>
<html lang="en">
  <%- include('templates/head'); -%>
  <body class="d-flex h-100 text-center text-white">
    <%- include('templates/header', {pageName: 'home'}); -%>
    <main>
      <div class="message-list-container"></div>
      <%if (user) { %>
      <div class="message-form-container px-5 mb-2">
        <form
          action="/messages/create"
          method="POST"
          class="mx-auto"
          style="max-width: 475px"
        >
          <div class="input-group">
            <input
              type="text"
              name="text"
              id="text"
              placeholder="Enter your message"
              class="form-control"
              required
              value="<%=message && message.text ? message.text : '' %>"
            />
            <input type="hidden" name="author" value="<%=user.id%>" />
            <button type="submit" class="btn btn-send btn-submit-form">
              Send
            </button>
          </div>
          <% } %>
        </form>
      </div>
    </main>
    <%- include('templates/footer'); -%>
  </body>
</html>
