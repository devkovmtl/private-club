<header class="fixed-top">
  <div class="container d-flex justify-content-between py-3">
    <a href="/" class="navbar-brand fs-3 fw-bolder">Private Club</a>

    <nav class="nav d-none d-md-flex align-items-center">
      <a href="/" class="nav-link <%= pageName === 'home' && 'active' %>"
        >Home</a
      >
      <% if(!user) { %>
      <a
        href="/auth/signin"
        class="nav-link <%= pageName === 'signin' && 'active' %>"
        >Sign In</a
      >
      <a
        href="/auth/signup"
        class="nav-link <%= pageName === 'signup' && 'active' %>"
        >Sign Up</a
      >
      <% } else { %>
      <a
        href="/auth/logout"
        class="nav-link <%= pageName === 'logout' && 'active' %>"
        >Logout</a
      >
      <% } %>
    </nav>
    <nav class="nav d-block d-md-none">
      <button class="btn btn-small btn-nav btn-toggle-nav" type="button">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="16"
          height="16"
          fill="currentColor"
          class="bi bi-list"
          viewBox="0 0 16 16"
        >
          <path
            fill-rule="evenodd"
            d="M2.5 12a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5zm0-4a.5.5 0 0 1 .5-.5h10a.5.5 0 0 1 0 1H3a.5.5 0 0 1-.5-.5z"
          />
        </svg>
      </button>
    </nav>
  </div>
</header>
<div class="mobile-nav-container p-5">
  <div class="container">
    <div class="row">
      <div class="d-flex justify-content-end">
        <button class="btn btn-small btn-nav btn-close-nav" type="button">
          <svg
            xmlns="http://www.w3.org/2000/svg"
            width="16"
            height="16"
            fill="currentColor"
            class="bi bi-x-lg"
            viewBox="0 0 16 16"
          >
            <path
              fill-rule="evenodd"
              d="M13.854 2.146a.5.5 0 0 1 0 .708l-11 11a.5.5 0 0 1-.708-.708l11-11a.5.5 0 0 1 .708 0Z"
            />
            <path
              fill-rule="evenodd"
              d="M2.146 2.146a.5.5 0 0 0 0 .708l11 11a.5.5 0 0 0 .708-.708l-11-11a.5.5 0 0 0-.708 0Z"
            />
          </svg>
        </button>
      </div>
    </div>

    <div class="row">
      <nav
        class="nav mobile-nav d-flex flex-column justify-content-center align-items-center"
      >
        <a href="/" class="nav-link <%= pageName === 'home' && 'active' %>"
          >Home</a
        >
        <% if(!user) { %>
        <a
          href="/auth/signin"
          class="nav-link mt-4 <%= pageName === 'signin' && 'active' %>"
          >Sign In</a
        >
        <a
          href="/auth/signup"
          class="nav-link mt-4 <%= pageName === 'signup' && 'active' %>"
          >Sign Up</a
        >
        <% } else { %>
        <a
          href="/auth/logout"
          class="nav-link mt-4 <%= pageName === 'logout' && 'active' %>"
          >Logout</a
        >
        <% } %>
      </nav>
    </div>
  </div>
</div>
